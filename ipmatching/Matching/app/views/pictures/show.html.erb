<p id="notice"><%= notice %></p>

<%= link_to 'Index', pictures_path %>

<div>
  <%= image_tag @picture.image.url, width: '300px' %>
</div>

<h2>Euklidovská vzdialenosť</h2>
<table>
  <thead>
  <tr>
    <th>Náhľad</th>
    <th>Počet bodov</th>
    <th>Počet %</th>
  </tr>
  </thead>
  <tbody>
  <% Picture.all.each do |p| %>
      <% result = @picture.match(p) %>
      <tr>
        <td><%= link_to (image_tag p.image.url, width: '75px'), p %></td>
        <td><%= result[:cnt] %> bodov
          z <%= @picture.interest_points.count %></td>
        <td><%= (result[:perc] * 100).round(2) %>%</td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>SQFT</h2>
<table>
  <thead>
  <tr>
    <th>Náhľad</th>
    <th>Počet %</th>
  </tr>
  </thead>
  <tbody>
  <% Picture.all.each do |p| %>
      <% result = @picture.match(p) %>
      <tr>
        <td><%= link_to (image_tag p.image.url, width: '75px'), p %></td>
        <td><%= (@picture.match_sqft(p) * 100).round(2) %>%</td>
      </tr>
  <% end %>
  </tbody>
</table>
