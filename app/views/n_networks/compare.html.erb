<h1>NN results</h1>
<h2>Preview</h2>
<div class="ui card">
  <div class="ui image">
    <%= image_tag @picture.image.url, width: '300px' %>
  </div>
  <div class="content">
    <a class="header"><%= @picture.image.original_filename %></a>
  </div>
</div>

<h2>Nearest results</h2>
<div class="ui five special cards">
  <% @result.each do |p, percent| %>
      <div class="card">
        <div class="blurring dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <%= (percent * 100).round(2) %>%
              </div>
            </div>
          </div>
          <%= image_tag p.image.url %>
        </div>
      </div>
  <% end %>
</div>